Bluepill.application("nexus") do |app|

  app.process("nexus") do |process|
    process.pid_file = "<%= @pid_dir %>/nexus.pid"
    process.start_command = "<%= @bin_dir %>/<%= @name %> start"
    process.stop_command = "<%= @bin_dir %>/<%= @name %> stop"
    process.stop_signals = [:term, 10.seconds, :kill]
    process.stdout = process.stderr = "<%= @home_dir %>/logs/nexus.log"
    process.start_grace_time = 8.seconds
    process.stop_grace_time = 15.seconds
    process.restart_grace_time = 15.seconds
  end
end